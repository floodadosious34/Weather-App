doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Flood Weather App
        link(rel='stylesheet', href='/static/styles/style.css')
    body
        section.main-section 
            h1 FLOOD WEATHER APP
            div.weather
                h1 #{selectedCity}, #{selectedCountry}
                h2 Temperature: #{tempF} F/#{tempC} C
                h2 Condition: #{condition}
                img(src=conditionPic, alt=condition)
                br
                a.button-style(href='/') Return Home

    